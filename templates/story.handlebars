<div class="story">
  <p>
    <span class="number">#{{number}}</span>
    <a {{bindAttr href="html_url"}}>{{title}}</a>

    {{#if needsReview}}
      <span class="needs-review">Needs Review</span>
    {{/if}}
  </p>

  {{#if assignee}}
    <img {{bindAttr src="assignee.avatar_url" title="assignee.login"}} />
  {{/if}}
</div>
